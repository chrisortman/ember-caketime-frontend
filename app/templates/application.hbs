<div class="ui inverted segment">
<div class="ui inverted secondary pointing menu">

    <a class="active item">
      Home
    </a>
    <a class="item">
      This Week
    </a>
    {{link-to 'New Order' 'orders.new' class="item"}}
    <a class="item">
      Invoices
    </a>
    <div class="right menu">
    <div class="item">
      <div class="ui icon input">
        <input type="text" placeholder="Search...">
        <i class="search link icon"></i>
      </div>
    </div>
    {{#if tori.isAuthenticated}}
    <a class="ui item">
      {{torii.user.name}}
    </a>
    {{else}}
    <a class="ui item">
      Logout
    </a>
    {{/if}}
  </div>
</div>
</div>
{{outlet}}
